<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="3dip"        		               
            android:orientation="vertical" >

            <TextView
                android:id="@+id/favorites_listview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location Name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/favorites_listview_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minLines="3"
                android:singleLine="false"
                android:text="Address 1\n"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>
        
        <ImageView android:layout_width="1px"
        		   android:layout_height="fill_parent"	
        		   android:id="@+id/sep1"
			       android:background="@drawable/ic_separator_34" />
        
        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
       	    android:paddingLeft="3dip" 
       	    android:paddingRight="1dip" 
            android:orientation="vertical" >

            <TextView
                android:id="@+id/favorites_listview_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="7dp"
                android:text="Date"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/favorites_listview_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_button_map" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>